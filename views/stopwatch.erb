  <script type="text/javascript" src="/javascripts/applications.js"></script>
</head>
<body>
  <div id="timer">00:00:00</div>
  <div id="buttons">
    <button id="start">Start</button>
    <button id="pause">Pause</button>
    <button id="reset">Reset</button>
  </div>

</body>
</html>